# lists all text shortcuts (scripts & aliases)
alias shortcuts='clear && cat ~/bin/.listOfAliases.txt | less'

# alias for Firefox
alias f='echo "Launching Firefox..." && /usr/bin/firefox &'
alias firefox='/usr/bin/firefox &'

# overloading spotify command
alias spotify='/usr/bin/spotify &'

# alias for LaTeX editor
alias latex='/usr/bin/gummi &'

# overloading steam command
alias steam='steam &'

# alias for Mozilla Thunderbird
alias thunderbird='/usr/bin/thunderbird 2>/dev/null 1>/dev/null &'

# alias for suspend
alias suspend='off --suspend'

# alias for AGH VPN
alias vpnagh='sudo openvpn ~/Documents/AGH/vpn/VPN-AGH.2020.ovpn'

# Firefox shortcuts section
alias excel='office excel'
alias fb='/usr/bin/firefox https://www.facebook.com/ &'
alias facebook='fb'
alias geogebra='/usr/bin/firefox https://www.geogebra.org/graphing &'
alias gmail='/usr/bin/firefox https://mail.google.com &'
alias mail='/usr/bin/firefox https://poczta.agh.edu.pl &'
alias messenger='ms'
alias ms='/usr/bin/firefox https://www.messenger.com &'
alias powerpoint='office powerpoint'
alias usos='/usr/bin/firefox https://web.usos.agh.edu.pl/kontroler.php?_action=dla_stud/studia/oceny/index &'
alias wiki='/usr/bin/firefox https://wiki.iiet.pl/doku.php &'
alias wolfram='/usr/bin/firefox https://wolframalpha.com &'
alias word='office word'
alias yt='youtube'
