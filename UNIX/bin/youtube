#!/bin/bash

SCRIPTNAME=`echo $0 | awk -F/ '{print $NF}'`


if (( $# == 0 )); then
	/usr/bin/firefox https://youtube.com &
	exit
fi

if [[ $1 == '-h' || $1 == '-?' || $1 == '--help' ]]; then
	cat ~/bin/.$SCRIPTNAME.help
	exit
fi

if [[ $1 == '--history' ]]; then
	/usr/bin/firefox https://youtube.com/feed/history &
	exit
fi

if [[ $1 == '--library' ]]; then
	/usr/bin/firefox https://youtube.com/feed/library
	exit
fi

if [[ $1 == '--wish-list' ]]; then
	/usr/bin/firefox https://youtube.com/playlist\?list=WL
	exit
fi

if [[ $1 == '--liked' ]]; then
	/usr/bin/firefox https://www.youtube.com/playlist\?list=LLtmsxtpzZH1WoPHluyoc5NQ
	exit
fi

if [[ $1 == '--trending' ]]; then
	/usr/bin/firefox https://youtube.com/feed/trending
	exit
fi

if [[ $1 == '--subscriptions' || $1 == '-s' ]]; then
	/usr/bin/firefox https://youtube.com/feed/subscriptions
	exit
fi

adrress=$1
shift

while [[ $1 ]]; do
	adrress="$adrress+$1"
	shift
done

/usr/bin/firefox https://www.youtube.com/results\?search_query=$adrress &
